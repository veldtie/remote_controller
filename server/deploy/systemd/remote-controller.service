[Unit]
Description=Remote Controller stack
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/remote_controller/server
ExecStart=/usr/bin/docker compose --project-directory /opt/remote_controller/server -f /opt/remote_controller/server/deploy/docker/docker-compose.yml up -d
ExecStop=/usr/bin/docker compose --project-directory /opt/remote_controller/server -f /opt/remote_controller/server/deploy/docker/docker-compose.yml down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
